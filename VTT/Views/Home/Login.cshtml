@model VTT.Models.Entities.User

@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutNoNavi";
}




<section style="padding:5px; border:2px solid; border-radius:20px; height:fit-content; background-image: url('https://img.freepik.com/free-photo/grunge-black-concrete-textured-background_53876-124541.jpg?w=1380&t=st=1675113537~exp=1675114137~hmac=0c369875fad8f5834f67761143cf257dc148416866269807f22dc815b78fee98');  background-size: cover; background-position: center;">
            
        <h1 style="border-bottom: 2px solid; border-radius:20px; text-align:center; ">• Virtual Tabletop App •</h1>

        <div style="display:flex; flex-direction:row; width:100%; text-align:center;">
        <form method="post" autocomplete="off" class="auth-form" style="width: 100%;">
                
                <h4>Wellcome, LogIn to continue</h4>

                <div class="form-group" style="display:flex; flex-direction:column; justify-content:center; align-content:center; width:100%; flex-wrap:wrap;">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="login" class="control-label"></label>
                        <input asp-for="login" class="form-control" placeholder="Login" style="width: 50%; margin: 2px; border-radius:20px; text-align:center; color:wheat; background-color: black;" />
                    </div>
                    <span asp-validation-for="login" class="text-danger"></span>
                    <div class="form-group">
                        <label asp-for="password" class="control-label"></label>
                        <input asp-for="password" class="form-control" placeholder="Password" style="width: 50%; margin: 2px; border-radius:20px; text-align:center; color:wheat; background-color: black;" />
                    </div>
                </div>

                    @if (ViewData["errorMessage"] != null)
                    {
                        <p style="color:red;">@ViewData["errorMessage"]</p>
                    }
                    <p>If you dont have account <a asp-action="Register">Register</a></p>

                <div class="form-group" style="width: 100%; flex-wrap:wrap; align-content:center; justify-content:center;">
                    <button type="submit" name="action" style="width: 95%; border-radius:20px; color:wheat; background-color: gray;">                            
                        Enter
                    </button>
                </div>

            </form>
        </div>
     </section>





